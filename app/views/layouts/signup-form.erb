<div class="signup-form">
  <span class="mega-menu-sub-title">Create Account</span>

  <form method="POST" action="/users" id="frmSignUp" enctype="multipart/form-data">
    <input name="authenticity_token" type="hidden">
    <div class="row">
      <div class="form-group">
        <div class="col-md-12">
          <label>Name</label>
          <input name="user[name]" id="username" type="text" value="" class="form-control input-md">
        </div>
      </div>
    </div>
