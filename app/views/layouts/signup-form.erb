    <div class="row">
      <div class="form-group">
        <div class="col-md-12">
          <label>Role</label>
          <select name="user[role]" class="form-control mb-md">
            <option value="client">client</option>
            <option value="freelancer">freelancer</option>
          </select>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="col-md-12">
          <label>Your image!</label>
          <input type="file" class="form-control input-md" name="user[image_url]" id="userimage_url">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="col-md-6">
          <label>Password</label>
          <input name="user[password]" id="userpassword" type="password" value="" class="form-control input-md">
        </div>
        <div class="col-md-6">
          <label>Re-enter Password</label>
          <input name="user[password_confirmation]" id="confirmpassword" type="password" value="" class="form-control input-md">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <input id="signup" type="submit" value="Create Account" class="btn btn-primary pull-right mb-xl">
      </div>
    </div>
  </form>

  <p class="log-in-info">Already have an account? <a href="#" id="headerSignIn">Log In</a></p>
