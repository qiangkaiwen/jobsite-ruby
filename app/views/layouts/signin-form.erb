<div class="signin-form">

  <span class="mega-menu-sub-title">Sign In</span>

  <form id="frmSignIn" class="login-div" method="POST" action="/users/login" enctype="multipart/form-data">
    <input name="authenticity_token" type="hidden">
    <div class="row">
      <div class="form-group">
        <div class="col-md-12">
          <label>Username or E-mail Address</label>
          <input name="user[name]" type="text" value="" class="form-control input-lg" tabindex="1">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="col-md-12">
          <label>Password</label>
          <input name="user[password]" type="password" value="" class="form-control input-lg" tabindex="2">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <!--<span class="remember-box checkbox">-->
        <!--<label for="rememberme">-->
        <!--<input type="checkbox" id="rememberme" name="rememberme">Remember Me-->
        <!--</label>-->
        <!--</span>-->
      </div>
      <div class="col-md-6">
        <input id="signin" type="submit" value="Login" class="btn btn-primary pull-right mb-xl" data-loading-text="Loading...">
      </div>
    </div>
  </form>

  <p class="sign-up-info">Don't have an account yet? <a href="#" id="headerSignUp">Sign Up</a></p>

</div>
