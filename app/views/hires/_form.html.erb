<div class="post-block post-leave-comment">
  <h3 class="heading-primary">Post a Bid</h3>

  <%= form_for(@hire, html: {:onsubmit => "return confirm('Are you sure?');" }) do |f| %>
    <div class="form-group" hidden>
      <%= f.text_field :user_id, value:session[:user]['id'] %>
    </div>
    <div class="form-group" hidden>
      <%= f.text_field :job_id, value:@job.id %>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="col-md-12">
          <label>Content *</label>
          <%= f.text_area :bid_content, class:'form-control', rows:10 %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= button_tag :'Post Bid', class:'btn btn-primary btn-lg' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
