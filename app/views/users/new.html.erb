<h1>New User</h1>
<form method="POST" action="/users" enctype="multipart/form-data">
    <input name="authenticity_token" type="hidden">
    <div class="field">
        <label>Name</label>
        <input name="user[name]" type="text" id="username" value="<%= @user.name %>">
    </div>
    <br>
    <div class="field">
        <label>Password</label>
        <input name="user[password]" type="password" id="userpassword" value="<%= @user.password %>">
    </div>
    <br>
    <div class="field">
        <label>Confirm password</label>
        <input id="passwordconfirm" type="password" value="<%= @user.password %>">
    </div>
    <br>
    <div class="field">
      <select>
        <option>client</option>
        <option>freelancer</option>
      </select>
    </div>
    <br>
    <div class="field">
        <div style="color:white">
            Image_url
          </div>
        <div style="color:white">
            <input type="file" name="user[image_url]" id="userimage_url">
          </div>
      </div>

  <br>
    <div class="actions" style="cursor: pointer; margin-bottom:20px;">
        <a id="signup">Sign up</a>
    </div>

    <p style=" color: red; font-size: 32px;"><%=@notice%></p>
</form>

<%= link_to 'Back', users_path %>