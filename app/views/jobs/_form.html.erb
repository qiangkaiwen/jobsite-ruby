<%= form_for(@job) do |f| %>
    <% if @job.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

          <ul>
            <% @job.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% else %>
        <h2 class="mb-sm mt-sm"><strong>Write</strong> Here</h2>
    <% end%>
    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, class:'form-control' %>
    </div>
    <div class="form-group" hidden>
      <%= f.text_field :user_id, value:session[:user]['id'] %>
    </div>
    <div class="form-group">
      <%= f.label :category_id %><br>
      <%= f.select :category_id, Category.all.collect {|category| [category.category_name, category.id]}, {include_blank:false}, {class:'form-control mb-md'} %>
    </div>
    <div class="form-group">
      <%= f.label :skills %><br>
      <%= f.text_field :skills, class:'form-control', placeholder:'ex:javascript oral english' %>
    </div>
    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description, class:'form-control', rows: 10 %>
    </div>

    <div class="form-group">
      <input type="submit" name="commit" value="create" id="jobCreate" class="btn btn-primary btn-lg mb-xlg">
    </div>
<% end %>
